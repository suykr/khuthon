<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>작물 상태 변화 (항목별)</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #f0f2f5;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      width: 95%;
      max-width: 1000px;
      background-color: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      box-sizing: border-box;
      text-align: center;
    }

    h2 {
      font-size: 22px;
      color: #333;
      margin-bottom: 20px;
    }

    .chart-row {
      display: flex;
      justify-content: space-between;
      gap: 15px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .chart-item {
      background-color: #fafafa;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
      flex: 1;
      max-width: 30%;
      min-width: 250px;
      box-sizing: border-box;
    }

    .chart-item canvas {
      width: 100%;
      height: 180px;
    }

    .button-group {
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .button-group button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      transition: background-color 0.3s;
    }

    .button-group button:hover {
      background-color: #0056b3;
    }

    @media (max-width: 800px) {
      .chart-item {
        max-width: 100%;
        min-width: 100%;
      }

      .chart-row {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>📊 작물 상태 변화 (날짜별)</h2>

    <div class="chart-row">
      <div class="chart-item">
        <canvas id="heightChart"></canvas>
      </div>
      <div class="chart-item">
        <canvas id="temperatureChart"></canvas>
      </div>
      <div class="chart-item">
        <canvas id="moistureChart"></canvas>
      </div>
    </div>

    <div class="button-group">
      <button onclick="goHome()">홈으로</button>
      <button onclick="addData()">데이터 추가</button>
    </div>
  </div>

  <script>
    // 샘플 데이터
    const cropData = <%- JSON.stringify(data) %>;
    console.log(cropData);

    // 날짜 라벨
    const labels = cropData.map(item => {
      return `${item.date.slice(0, 4)}-${item.date.slice(4, 6)}-${item.date.slice(6, 8)}`;
    });

    // 데이터 추출
    const heights = cropData.map(item => Number(item.height));
    const temperatures = cropData.map(item => Number(item.temperature));
    const moistures = cropData.map(item => Number(item.soilMoisture));

    // 차트 생성 함수
    function createChart(canvasId, label, data, color) {
      new Chart(document.getElementById(canvasId), {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            label: label,
            data: data,
            borderColor: color,
            backgroundColor: color + '33',
            borderWidth: 2,
            pointRadius: 4,
            pointHoverRadius: 6,
            tension: 0.3
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: true },
            tooltip: {
              backgroundColor: '#333',
              titleFont: { size: 14, weight: 'bold' },
              bodyFont: { size: 12 },
              padding: 10
            }
          },
          scales: {
            x: {
              ticks: { font: { size: 10 } },
              title: { display: true, text: '날짜' }
            },
            y: {
              beginAtZero: true,
              ticks: { stepSize: 10, font: { size: 12 } },
              title: { display: true, text: label }
            }
          }
        }
      });
    }

    // 그래프 생성
    createChart("heightChart", "높이 (cm)", heights, "#4CAF50");
    createChart("temperatureChart", "기온 (°C)", temperatures, "#2196F3");
    createChart("moistureChart", "토양 수분 (%)", moistures, "#FF9800");

    // 홈으로 이동
    function goHome() {
      window.location.href = "/main";
    }

    // 데이터 추가
    function addData() {
      window.location.href = "./<%- name %>/add";
    }
  </script>
</body>
</html>
